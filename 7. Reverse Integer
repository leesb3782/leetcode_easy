// 7. Reverse Integer
int reverse(int x) {
    bool postive = x > 0 ? 1 : 0;
    int first_digit = abs(x % 10);
    int digits = 0, answer = 0;
    
    
    while(x!=0) {
        digits++;
        if(digits == 10 && first_digit > 3)
            return 0;
        answer *= 10;
        answer += (x % 10);
        x /= 10;
    }
    //printf("answer %d\n", answer);
    if((answer > 0 && !postive) || (answer < 0 && postive))
        return 0;
    return answer;
}
